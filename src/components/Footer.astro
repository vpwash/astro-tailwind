---
import logoWhite from "../img/logo-white.svg";
import faceBook from "../img/icon-facebook.svg";
import instagram from "../img/icon-instagram.svg";
import pintrest from "../img/icon-pinterest.svg";
import twitter from "../img/icon-twitter.svg";
import youTube from "../img/icon-youtube.svg";
const images = [faceBook, instagram, pintrest, twitter, youTube];
---

<footer class='bg-veryDarkBlue'>
  <div
    class='container mx-auto flex flex-col-reverse justify-between space-y-8 px-6 py-10 md:flex-row md:space-y-0'
  >
    <div
      class='flex flex-col-reverse items-center justify-between space-y-12 md:flex-col md:items-start md:space-y-0'
    >
      <div class='mx-auto py-6 text-center text-white md:hidden'>
        Copyright &copy; <script is:inline>
          document.write(new Date().getFullYear());
        </script>, All rights reserved.
      </div>
      <div>
        <img src={logoWhite} alt='' class='h-8' />
      </div>
      <div class='justiy-center flex space-x-4'>
        {images.map((image) => <img src={image} alt='' class='h-8' />)}
      </div>
    </div>
    <div class='flex justify-around space-x-2'>
      <div class='flex flex-col space-y-3 text-white'>
        {
          [
            ["Home", "/"],
            ["Pricing", "#"],
            ["Products", "#"],
            ["About", "#"],
          ].map(([title, url]) => (
            <a href={url} class='hover:text-brightRed'>
              {title}
            </a>
          ))
        }
      </div>
      <div class='flex flex-col space-y-3 text-white'>
        {
          [
            ["Creers", "#"],
            ["Community", "#"],
            ["Privacy Policy", "#"],
          ].map(([title, url]) => (
            <a href={url} class='hover:text-brightRed'>
              {title}
            </a>
          ))
        }
      </div>
    </div>

    <div class='flex flex-col justify-between'>
      <form>
        <div class='flex space-x-3'>
          <input
            type='text'
            placeholder='Updated in your inbox'
            class='flex-1 rounded-full px-4 focus:outline-none'
          />
          <button
            class='rounded-full bg-brightRed px-6 py-4 text-white hover:bg-brightRedLight focus:outline-none'
            >Go</button
          >
        </div>
      </form>
      <div class='hidden text-white md:block'>
        Copyright &copy; <script is:inline>
          document.write(new Date().getFullYear());
        </script>, All rights reserved.
      </div>
    </div>
  </div>
</footer>
